@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Football Accessories</title>
    <!-- <link rel="stylesheet" href="/css/styles.css"> -->

    <style>
        /* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body and Global Styles */
body {
    font-family: Arial, sans-serif;
    color: #ffffff;
    @* background-color: #69c90fc0; *@
    background-image: url('/images/background3.jpg');
}

/* Header Styles */
header {
    background-color: #0d7ac2;
    color: #fcfcfc;
    padding: 20px 0;
}

header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

header h1 {
    font-size: 2rem;
}

header nav a {
    color: #f1f1f1;
    margin-left: 20px;
    text-decoration: none;
}

header nav a:hover {
    text-decoration: underline;
}

/* Main Content Styles */
main {
    padding: 40px 20px;
}

.product-grid {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.product-card {
    background-color: #020011;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-align: center;
    width: calc(33.333% - 20px);
    margin-bottom: 20px;
}

.product-card img {
    width: 100%;
    height: auto;
}

.product-card h2 {
    font-size: 1.5rem;
    margin: 15px 0;
}

.product-card p {
    font-size: 1.2rem;
    margin: 0 0 15px;
}

.product-card button {
    background-color: #28a745;
    color: #fff;
    border: none;
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.3s ease;
}

.product-card button:hover {
    background-color: #218838;
}

/* Footer Styles */
footer {
    background-color: #00070c;
    color: #fff;
    padding: 10px 0;
    text-align: center;
}

footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1>Football Accessories</h1>
            <nav>
                <a href="#">Home</a>
                <a href="#">Shop</a>
                <a href="#">Contact</a>
            </nav>
        </div>
    </header>

    <main>
        <div class="container">
            <section class="product-grid">
                <div class="product-card">
                    <img src="/images/shoe1.jpg" alt="check shoes">
                    <h2>Football</h2>
                    <p>Price: $30</p>
                    <button>Add to Cart</button>
                </div>
                <div class="product-card">
                    <img src="/images/shoe2.jpeg" alt="Football shoes">
                    <h2>Football Cleats</h2>
                    <p>Price: $60</p>
                    <button>Add to Cart</button>
                </div>
                <div class="product-card">
                    <img src="/images/myone.jpg" alt="Shoes">
                    <h2>Shoes</h2>
                    <p>Price: $15</p>
                    <button>Add to Cart</button>
                </div>
            </section>
        </div>
    </main>
</body>
</html>
